<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dip" >

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_bt" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back_bt" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_back"
            android:text=""
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceLarge" />
<RelativeLayout 
            android:layout_alignParentBottom="true"
            android:layout_height="1dip"
            android:layout_width="match_parent"
            android:background="@color/gray"></RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:orientation="vertical" >
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="100dip">
	        <MultiAutoCompleteTextView
	            android:id="@+id/edt_receive_device_msg"
	            android:layout_width="match_parent"
	            android:layout_height="100dip"
	            android:ems="10"
	            android:text=""
	            android:minLines="6" >
	
	        </MultiAutoCompleteTextView>

		</RelativeLayout>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现新设备，请绑定后进行操作"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btn_get_psc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="获取passcode" />

        
    </LinearLayout>
    

</RelativeLayout>
